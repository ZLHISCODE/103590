Private Sub UserControl_Resize()
    Dim sngTop As Single, intSkip As Integer
    Dim sngLeft As Single, i As Long
    Dim sngStepW As Single, sngStepH As Single
    Dim sngLeftTemp As Single
    
    Err = 0: On Error Resume Next
    sngLeft = ScaleLeft + 50: sngTop = ScaleTop + 50
    sngStepW = (ScaleWidth - btnWeek(0).Width * 3 - 100) \ 2
    If sngStepW < 0 Then sngStepW = 50
    sngStepH = (ScaleHeight - btnWeek(0).Height * 3 - 100) \ 2
    If sngStepH < 0 Then sngStepH = 50
    Select Case m_AlignmentX
    Case Weeks_AutoSizeWidth '
    Case Weeks_Left_Justify
        sngStepW = IIf(m_SkipX <= 0, 100, m_SkipX)
    Case Weeks_CenterX_Justify
        sngStepW = IIf(m_SkipX <= 0, 100, m_SkipX)
        sngLeft = (ScaleWidth - btnWeek(0).Width * 3 - sngStepW * 2 - sngLeft * 2) \ 2
    Case Weeks_Right_Justify
        sngStepW = IIf(m_SkipX <= 0, 100, m_SkipX)
        sngLeft = ScaleWidth - btnWeek(0).Width * 3 - sngStepW * 2 - sngLeft
    End Select
    
    Select Case m_AlignmentY
    Case Weeks_AutoSizeWidth '
    Case Weeks_Top_Justify
        sngStepH = IIf(m_SkipY <= 0, 100, m_SkipY)
    Case Weeks_CenterY_Justify
        sngStepH = IIf(m_SkipY <= 0, 100, m_SkipY)
        sngTop = (ScaleHeight - btnWeek(0).Height * 3 - sngStepH * 2 - sngTop * 2) \ 2
    Case Weeks_Bottom_Justify
        sngStepH = IIf(m_SkipY <= 0, 100, m_SkipY)
        sngTop = ScaleHeight - btnWeek(0).Height * 3 - sngStepH * 2 - sngTop
    End Select
    sngLeftTemp = sngLeft
    For i = 0 To btnWeek.UBound
        If i Mod 3 = 0 Then
            sngLeftTemp = sngLeft
            If i <> 0 Then sngTop = sngTop + btnWeek(i).Height + sngStepH
        Else
            sngLeftTemp = sngLeftTemp + btnWeek(i).Width + sngStepW
        End If
        btnWeek(i).Left = sngLeftTemp
        btnWeek(i).Top = sngTop
    Next
    With shpLine
        .Left = ScaleLeft
        .Width = ScaleWidth
        .Top = ScaleTop
        .Height = ScaleHeight
    End With
End Sub
