Private Sub btnWeek_Click(Index As Integer)
    Dim i As Integer, blnSelected As Boolean
    
    If MultiSelectionMode = False Then '单选模式
        blnSelected = btnWeek(Index).Value
        For i = btnWeek.LBound To btnWeek.UBound
            btnWeek(i).Value = False
        Next
        btnWeek(Index).Value = blnSelected
    Else
        btnWeek(Index).Value = Not btnWeek(Index).Value
    End If
    RaiseEvent Click(Index, btnWeek(Index).Value)
End Sub

