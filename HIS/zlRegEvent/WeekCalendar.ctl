Public Enum gWeeksAlignmentX
    Weeks_AutoSizeWidth = 0 '自动调整
    Weeks_Left_Justify = 1  '左边对齐
    Weeks_CenterX_Justify = 3  '居中对齐
    Weeks_Right_Justify = 4  '右边对齐
End Enum
Public Enum gWeeksAlignmentY
    Weeks_AutoSizeHeight = 0 '自动调整
    Weeks_Top_Justify = 1  '左边对齐
    Weeks_CenterY_Justify = 3  '居中对齐
    Weeks_Bottom_Justify = 4  '底边对齐
End Enum
