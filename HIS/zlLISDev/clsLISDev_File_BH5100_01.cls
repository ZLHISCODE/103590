Public Function ResultFromFile(ByVal strFile As String, ByVal lngSampleNo As Long, _
                               ByVal dtStart As Date, Optional ByVal dtEnd As Date = CDate("3000-12-31")) As String()
    '标准函数：从文件获取检验结果
    '   strFile：包含路径的文件名
    '   lngSampleNO：标本号。为-1表示选取所有时间范围内的标本
    '   dtStart：开始时间。如果指定了标本号，则只提取该参数当天的这个标本（dtEnd无效）
    '   dtEnd：结束时间。只有当选取多个标本（lngSampleNO=-1）时，该参数有效。如果不指定该参数值，则时间范围为>=dtStart。
    '   返回的检验结果数组(各解析程序必须按以下标准组织结果)
    '   元素之间以|分隔
    '   第0个元素：检验时间
    '   第1个元素：样本序号
    '   第2个元素：检验人
    '   第3个元素：标本
    '   第4个元素：是否质控品
    '   从第5个元素开始为检验结果，每2个元素表示一个检验项目。
    '       如：第5i个元素为检验项目，第5i+1个元素为检验结果

    Dim aResults() As String, objFile As New Scripting.FileSystemObject
    Dim strChenel As String, str操作员 As String, str日期 As String
    Dim strFilePath As String, intCount As Long, lngLoop As Long

    Dim objStream As TextStream
    Dim strLine As String, varItem As Variant, varTmp As Variant
    Dim str标本号 As String, str检验结果 As String, blnReturn As Boolean
    Dim lngRow As Long, varLine As Variant
    On Error GoTo errHandle
    '避免出现下标错误
    ReDim aResults(0)
    aResults(0) = ""
    ResultFromFile = aResults
    strFilePath = UCase(objFile.GetParentFolderName(strFile))
    '
    lngLoop = DateDiff("d", dtStart, dtEnd)

    For intCount = 0 To lngLoop
        str日期 = Format(DateAdd("d", intCount, dtStart), "yyyy-MM-dd")
        strFile = Dir(strFilePath & "\*" & str日期 & "*.TXT")
        Do While strFile <> ""

            Open strFilePath & "\" & strFile For Input As #1    ' 打开文件。
            Do While Not EOF(1)    ' 循环至文件尾。
                Line Input #1, strLine    ' 读入一行数据并将其赋予某变量。

                If strLine <> "" Then
                    strLine = Replace(strLine, vbTab, ",")
                    varLine = Split(strLine, ",")
                    If lngRow = 0 Then
                        str日期 = Format(Now, "yyyy-MM-dd")
                    Else
                        str标本号 = Val(varLine(0))
                        If Val(str标本号) > 0 Then
                            '铁Fe 锌Zn 钙Ca 铜Cu 镁Mg
                            str检验结果 = "|Cu|" & Format(Val(varLine(1)), "0.000") & "|Zn|" & Format(Val(varLine(2)), "0.000") & _
                                      "|Ca|" & Format(Val(varLine(3)), "0.000") & "|Mg|" & Format(Val(varLine(4)), "0.000") & _
                                      "|Fe|" & Format(Val(varLine(5)), "0.000")
                            If str检验结果 <> "|Cu|0.000|Zn|0.000|Ca|0.000|Mg|0.000|Fe|0.000" Then
                                If aResults(UBound(aResults)) <> "" Then
                                    ReDim Preserve aResults(UBound(aResults) + 1)
                                End If
                                aResults(UBound(aResults)) = str日期 & "|" & str标本号 & "| | |0" & str检验结果
                            End If
                        End If
                    End If
                End If
                lngRow = lngRow + 1
                DoEvents
            Loop
            Close #1    ' 关闭文件。
            strFile = Dir
        Loop

    Next

    ResultFromFile = aResults
    Exit Function
errHandle:
    WriteLog "clsLISDev_File_BH5100_01.ResultFromFile", strFile, Err.Number & " " & Err.Description
End Function





